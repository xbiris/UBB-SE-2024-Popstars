<Window x:Class="wpfui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfui"
        mc:Ignorable="d"
        Title="MainWindow" Height="436" Width="890">
    <Window.Resources>
        <Style x:Key="TextBlockStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style x:Key="ButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="MediumPurple"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style x:Key="ListBoxStyle" TargetType="{x:Type ListBox}">
            <Setter Property="Background" Value="#BA68C8"/>
            <!-- Adjust ListBox background color here -->
            <Setter Property="BorderBrush" Value="MediumPurple"/>
            <!-- Adjust ListBox border color here -->
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        </Style>
    </Window.Resources>
    <Grid x:Name="mainGrid" Background="Black">

        <Border BorderBrush="White" BorderThickness="2" HorizontalAlignment="Left" Height="144" Margin="26,27,0,0" VerticalAlignment="Top" Width="156">
            <Image/>
        </Border>
        <Label Content="ArtistName" Foreground="White" FontSize="27" HorizontalAlignment="Left" Height="44" Margin="205,27,0,0" VerticalAlignment="Top" Width="215"/>
        <Label Content="Your Songs" Foreground="White" FontSize="20" HorizontalAlignment="Left" Height="44" Margin="511,27,0,0" VerticalAlignment="Top" Width="215"/>
        <Label Content="Your Albums" Foreground="White" FontSize="20" HorizontalAlignment="Left" Height="44" Margin="511,244,0,0" VerticalAlignment="Top" Width="215"/>



        <!-- Buttons -->
        <Button x:Name="StatisticsButton" Content="View Statistics" Style="{StaticResource ButtonStyle}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="182,317,0,0" Width="130" Click="Button_Click_Statistics"/>
        <Button x:Name="PFPButton"  Content="Change Profile Pic" Style="{StaticResource ButtonStyle}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="335,317,0,0" Width="138" Click="Button_Click_PFP" RenderTransformOrigin="0.232,0.597" Height="38"/>
        <Button x:Name="NewAlbumButton" Content="New Album" Style="{StaticResource ButtonStyle}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="26,315,0,0" Height="40" Width="125" Click="Button_Click_NewAlbum"/>

        <!-- ListBox for Songs -->
        <ListBox x:Name="SongsListBox" ItemsSource="{Binding SongsList}" Style="{StaticResource ListBoxStyle}" Margin="511,67,32,195"
         ScrollViewer.VerticalScrollBarVisibility="Auto" BorderThickness="1" BorderBrush="#5e35b1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Title}" Style="{StaticResource TextBlockStyle}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.Template>
                <ControlTemplate TargetType="ListBox">
                    <Border CornerRadius="10" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="#BA68C8">
                        <ScrollViewer Padding="{TemplateBinding Padding}"
                              Focusable="False">
                            <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </ListBox.Template>
        </ListBox>

        <!-- ListBox for Albums -->

        <ListBox x:Name="AlbumListBox" ItemsSource="{Binding SongsList}" Style="{StaticResource ListBoxStyle}" Margin="511,288,32,24"
  ScrollViewer.VerticalScrollBarVisibility="Auto" BorderThickness="1" BorderBrush="#5e35b1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Title}" Style="{StaticResource TextBlockStyle}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.Template>
                <ControlTemplate TargetType="ListBox">
                    <Border CornerRadius="10" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="#BA68C8">
                        <ScrollViewer Padding="{TemplateBinding Padding}"
                       Focusable="False">
                            <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </ListBox.Template>
        </ListBox>


        <!-- RichTextBox -->
        <RichTextBox VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" Margin="26,198,0,0" VerticalAlignment="Top" Width="448" Height="90" Background="Black">
            <!-- Set RichTextBox background color here -->
            <FlowDocument>
                <Paragraph>
                    <Run Text="BIO goes here" Foreground="White"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>


    </Grid>
</Window>
